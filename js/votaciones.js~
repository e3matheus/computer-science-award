/*
	Jose Garrido 13-02-10
	Para desplegar las votaciones de manera fluida.
	Se usan las funciones de jquery show() y hide().
	Ver: jquery.js	
*/

$(document).ready(function(){
		
   		$("#COMPUCARTOON").toggle(function(){
     		$("#votCOMPUCARTOON").show('normal');
   		},function(){
			$("#votCOMPUCARTOON").hide('normal');
	   	});
		$("#COMPUPAPI").toggle(function(){
     		$("#votCOMPUPAPI").show('normal');
   		},function(){
			$("#votCOMPUPAPI").hide('normal');
	   	});
		$("#COMPUMAMI").toggle(function(){
     		$("#votCOMPUMAMI").show('normal');
   		},function(){
			$("#votCOMPUMAMI").hide('normal');
	   	});
		$("#COMPUCHINAZO").toggle(function(){
     		$("#votCOMPUCHINAZO").show('normal');
   		},function(){
			$("#votCOMPUCHINAZO").hide('normal');
	   	});
		$("#COMPULOVE").toggle(function(){
     		$("#votCOMPULOVE").show('normal');
   		},function(){
			$("#votCOMPULOVE").hide('normal');
	   	});
		
 	});
